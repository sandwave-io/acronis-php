{
  "name": "sandwave-io/acronis-php",
  "description": "A PHP SDK for the Acronis REST API.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Glenn Blom",
      "email": "glennblom@gmail.com"
    },
    {
      "name": "Sander van Stokkom",
      "email": "sander@sanderenjoyce.nl"
    },
    {
      "name": "George Boon",
      "email": "dev@georgeboon.nl"
    }
  ],
  "require": {
    "php": "^7.3|^7.4|^8.0",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^6.2.0|^7.0.1",
    "jms/serializer-bundle": "^3.10",
    "psr/log": "^1.1",
    "webmozart/assert": "^1.10"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.1",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan": "^0.12.98",
    "phpstan/phpstan-phpunit": "^0.12.22",
    "phpunit/phpunit": "^9.5",
    "spaze/phpstan-disallowed-calls": "^1.9",
    "uptimeproject/php-cs-fixer-config": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "SandwaveIo\\Acronis\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SandwaveIo\\Acronis\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "phpcs-fix": "vendor/bin/php-cs-fixer fix",
    "phpcs-fix-dryrun": "vendor/bin/php-cs-fixer fix --dry-run --diff --show-progress=none -vvv",
    "phpunit": "vendor/bin/phpunit --coverage-text",
    "phpstan": "vendor/bin/phpstan analyze",
    "analyze": [
      "@phpcs-fix-dryrun",
      "@phpstan",
      "@phpunit"
    ]
  }
}
